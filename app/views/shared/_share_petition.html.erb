<h2>Share this petition</h2>
<% title = petition.title + " - e-petitions" -%>
<ul class="petition-share">
  <li>
    <%= link_to "Facebook", "http://www.facebook.com/sharer.php?t=#{URI.escape(title)}&u=#{URI.escape(petition_url(petition))}" %>
  </li>
  <li>
    <%= link_to "Twitter", "http://twitter.com/share?text=#{URI.escape(title)}&url=#{URI.escape(petition_url(petition))}" %>
  </li>
</ul>
