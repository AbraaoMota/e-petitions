<%= form_row :class => 'checkbox_row', :for => [signature, :terms_and_conditions] do %>
  <%= f.check_box :terms_and_conditions, :tabindex => increment %>
  <%= f.label :terms_and_conditions, 
              raw("I agree to the #{new_window_link_to('Terms & Conditions', 
                                                   terms_and_conditions_path, 
                                                   :tabindex => increment, 
                                                   :class => 'text_link_plain terms_and_conditions')}")
  %>
  <%= error_messages_for_field signature, :terms_and_conditions %>
<% end %>
