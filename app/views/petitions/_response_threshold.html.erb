<section class="about-item about-item-count-10000" aria-labelledby="response-threshold-heading">
  <h2 id="response-threshold-heading">10,000 <span>signatures</span></h2>
  <%# Has response #%>
  <% if petition.response_summary.present? -%>
    <h3>The government responded</h3>
    <blockquote>
      <%= auto_link(simple_format(h(petition.response_summary)), html: { rel: 'nofollow' }) %>
    </blockquote>

    <% if petition.response.present? -%>
      <details>
        <summary><span class="summary">Read the response in full</span></summary>
        <div class="panel-indent panel-no-border">
          <%= auto_link(simple_format(h(petition.response)), html: { rel: 'nofollow' }) %>
        </div>
      </details>
    <% end -%>
  <% else -%>
    <p>If a petition gets 10,000 signatures, the government will respond</p>
  <% end -%>
</section>
