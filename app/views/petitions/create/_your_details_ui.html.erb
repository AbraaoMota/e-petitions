<%= link_to :back, class: "back-page" do %>
  &#9666; Back <span class="visuallyhidden"> to previous page</span>
<% end %>

<h1 class="page-title">Sign your petition</h1>
<h2 class="page-subtitle"><%= petition.title %></h2>

<%= render 'petitions/create/error_summary', f: f %>

<%= f.fields_for :creator_signature, petition.creator_signature do |csf| %>
  <%= render :partial => 'signatures/form', :locals => { :f => csf, :signature => csf.object, :context => 'create-petition' } %>
<% end %>

<p>By signing you agree to the <%= link_to 'petition guidelines', help_path(anchor: 'creating-a-petition') %></p>

<%= f.submit 'Sign this petition', :name => 'move:next', :class => 'button', :tabindex => increment %>
