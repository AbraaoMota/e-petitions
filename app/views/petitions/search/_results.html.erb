<div class="search-results section-panel">
  <% if @petitions.empty? %>
    <p>No petitions could be found matching your search terms.</p>
  <% else %>
    <ol>
      <% @petitions.each do |petition| %>
        <li class="petition-item petition-<%= petition.state %>">
          <%= render "petitions/search/result_items/petition_result_for_facet_#{@petitions.scope}", petition: petition %>
        </li>
      <% end -%>
    </ol>
    <%= render 'petitions/search/result_list_footer', petitions: @petitions %>
    <p><%= link_to "Get this data (json format)", petitions_path(:json, params.slice(:page, :state)) %></p>
  <% end %>
</div>
