<%= form_tag [:admin, :search], class: 'search-inline', method: 'get' do %>
  <%= label_tag :q, "Search all petitions" %>
  <%= search_field_tag 'q', query, class: 'form-control', id: 'search', placeholder:"Keywords, email address, petition ID or [tag]" %>
  <%= submit_tag 'Search', class: 'inline-submit' %>
<% end %>
