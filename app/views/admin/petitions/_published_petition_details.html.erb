<div class="row">
  <label>Open:</label>
  <p class="text_block"><%= date_format_admin(@petition.open_at) %>&nbsp;</p>
</div>

<div class="row">
  <label>Closing:</label>
  <p class="text_block"><%= date_format_admin(@petition.closed_at) %>&nbsp;</p>
</div>

<div class="row">
  <label>Signature count:</label>
  <p class="text_block"><%= number_with_delimiter(@petition.signature_count) %>&nbsp;</p>
</div>

<div class="row">
  <label>State:</label>
  <p class="text_block"><%= @petition.state_label %>&nbsp;</p>
</div>

<% if @petition.rejected? or @petition.hidden? -%>
  <div class="row">
    <label>Rejection reason:</label>
    <p class="text_block"><%= @petition.rejection_reason %>&nbsp;</p>
  </div>

  <div class="row">
    <label>Rejection text:</label>
    <p class="text_block"><%= @petition.rejection_text %>&nbsp;</p>
  </div>
<% end -%>
