<%= form_for [:admin, @petition ], :builder => AdminFormBuilder do |f| -%>

  <%= render :partial => 'petition_details', :locals => { :f => f } %>

  <div class="row">
    <label>Duration:</label>
    <p class="text_block"><%= @petition.duration %> months</p>
  </div>

  <div>
    <%= submit_tag 'Publish this petition', :data => { :confirm => "Are you sure you want to publish this petition?" } %>
  </div>

  <%= render :partial => 'reject', :locals => { :f => f, :button_label => "Reject" } %>
<% end -%>
