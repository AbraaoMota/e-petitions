<nav class="actions" role="navigation">
  <ul>

    <%# If petition is awaiting moderation %>
    <% if @petition.in_todo_list? %>
      <li class="action">
        <div>
          <h2>Moderate this petition</h2>
          <div>
            <%= render 'admin/moderation/form', petition: @petition %>
          </div>
        </div>
      </li>

      <li class="action"><%= link_to 'Notes', admin_petition_notes_path(@petition) %></li>

    <%# If petition has already been moderated %>
    <% else %>
      <li class="action"><%= link_to 'Notes', admin_petition_notes_path(@petition) %></li>

      <li class="action"><%= link_to 'Government response', admin_petition_government_response_path(@petition) %></li>

      <% if @petition.can_have_debate_added? %>
        <li class="action"><%= link_to 'Debate outcome', admin_petition_debate_outcome_path(@petition) %></li>
        <li class="action"><%= link_to("Proposed debate date", edit_scheduled_debate_date_admin_petition_path(@petition)) %></li>
      <% end %>

      <% if current_user.can_take_petitions_down? && @petition.can_be_signed? %>
        <li class="action"><%= link_to 'Take this petition down', admin_petition_take_down_path(@petition) %></li>

      <% elsif @petition.rejected? -%>
        <li class="action"><%= link_to 'Change rejection reason', admin_petition_take_down_path(@petition) %></li>
      <% end -%>

    <% end %>
  </ul>
</nav>
