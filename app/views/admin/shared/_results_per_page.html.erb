<%= form_tag path, :method => :get, :class => "filter" do -%>
  <%= label_tag :per_page, "Results per page:" %>
  <%= select_tag :per_page, options_for_select(%w(20 50 100), params[:per_page]), :onchange => "window.location='?per_page=' + this.value" %>
  <%= submit_tag "Go", :style => 'display: none;' %>
<% end -%>
